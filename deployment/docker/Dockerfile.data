# Multi-stage Dockerfile for Data Services
# Handles market data processing and storage

# ============================================
# Stage 1: Builder
# ============================================
FROM python:3.12-slim AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir redis boto3

# ============================================
# Stage 2: Production
# ============================================
FROM python:3.12-slim AS production

# Security: Run as non-root user
RUN groupadd -r dataservice && useradd -r -g dataservice dataservice

WORKDIR /app

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application code
COPY --chown=dataservice:dataservice src/ ./src/
COPY --chown=dataservice:dataservice config/ ./config/
COPY --chown=dataservice:dataservice requirements.txt .

# Create data directories
RUN mkdir -p /app/data /app/logs /app/cache && \
    chown -R dataservice:dataservice /app/data /app/logs /app/cache

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app \
    LOG_LEVEL=INFO \
    ENVIRONMENT=production \
    DATA_CACHE_DIR=/app/cache

# Health check
HEALTHCHECK --interval=60s --timeout=30s --start-period=10s --retries=3 \
    CMD python -c "import sys; sys.exit(0)" || exit 1

# Switch to non-root user
USER dataservice

# Expose API port (optional)
EXPOSE 8080

# Default command - run data service
CMD ["python", "-m", "src.data"]
